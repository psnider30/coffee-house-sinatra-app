<h2>Create New Review</h2>
<br><br>

<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<%end%>

<form action="/reviews/new" method="post">
  <label for="coffee_house_name">Coffee House Name: </label>
  <input type="text" name="coffee_house_name" id="coffee_house_name">

  <label for="coffee_house_location">Location:</label>
  <input type="text" name="coffee_house_location" id="coffee_house_location">
  <br><br>

  <h5>Review:</h5>
  <textarea name="review_content" rows="8" cols="80"></textarea>
  <br><br>

  <input type="submit" value="submit">
</form>
